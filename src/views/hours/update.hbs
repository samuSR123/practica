<div class="block mx-auto my-12 p-8 bg-white w-full md:w-1/3 border border-gray-200 rounded-md shadow-lg text-gray-800">

  <h1 class="text-center text-3xl font-bold">Editar hora</h1>

  {{#each hours}}
  <form action="/horas/edit/{{idHorario}}" method="POST" class="mt-4">

    <input type="text" onfocus="(this.type='date')" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Fecha" name="fecha" value="{{Fecha}}">

    <input type="text" onfocus="(this.type='time')" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Hora de inicio" name="hora_inicio" value="{{Hora_Inicio}}">
    
    <input type="text" onfocus="(this.type='time')" class="border border-gray-200 rounded-md bg-gray-200 w-full text-lg placeholder-gray-500 
      p-2 my-2 focus:bg-white" placeholder="Hora de termino" name="hora_termino" value="{{Hora_Termino}}">

    <button type="submit" class="rounded-md bg-blue-700 w-full text-lg text-white font-semibold p-2 my-3
      hover:bg-blue-600 focus:bg-blue-700">Send</button>

  </form>
  {{/each}}

</div>