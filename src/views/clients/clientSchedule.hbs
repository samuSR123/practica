<div class="max-w-full mx-auto mb-4 sm:px-6 lg:px-8">
  <button id="btn_filter" class="bg-[#f8f9fa] text-black px-2 py-1 mt-3 border border-[#dee2e6] rounded-md shadow-md hover:bg-[#dee2e6]">
    <i class="bi bi-funnel-fill"></i></button>
  <button class="rounded-md bg-red-500 text-base text-white font-semibold py-1 px-3 ml-5 shadow-md
  hover:bg-red-600 focus:red-blue-600" id="all" onclick="window.location.replace('/horario')">Mostrar todas</button>
  <div id="filters" class="mt-3 bg-slate-300/50 border border-slate-300 rounded-md shadow-md hidden">
    <div class="p-3 bg-slate-300/60">
      <h1 class="text-base font-semibold">Buscar fecha exacta</h1>
      <form action="/horario/buscar" method="GET" class="contents">
        <input class="border border-gray-400 p-1 rounded-md text-base w-1/6" type="date" name="fecha" value="{{Fecha_}}">
        <button type="submit" class="rounded-md bg-blue-700 text-base text-white font-semibold py-1 px-3
        hover:bg-blue-600 focus:bg-blue-700">Buscar</button>
      </form>
    </div>
    <div class="p-3">
      <h1 class="text-base font-semibold">Buscar rango de fechas</h1>
      <form action="/horario/buscar" method="GET" class="contents">
        <input class="border border-gray-400 p-1 rounded-md text-base w-1/6" type="date" name="fecha_1" value="{{Fecha_1}}">
        <input class="border border-gray-400 p-1 rounded-md text-base w-1/6" type="date" name="fecha_2" value="{{Fecha_2}}">
        <button type="submit" class="rounded-md bg-blue-700 text-base text-white font-semibold py-1 px-3
        hover:bg-blue-600 focus:bg-blue-700">Buscar</button>
      </form>
    </div>
    <div class="p-3 bg-slate-300/60">
      <h1 class="text-base font-semibold">Buscar nombre</h1>
      <form action="/horario/buscar" method="GET" class="contents">
        <input class="border border-gray-400 p-1 rounded-md text-base w-1/6" type="text" name="nombre" value="{{nombre}}" required>
        <button type="submit" class="rounded-md bg-blue-700 text-base text-white font-semibold py-1 px-3
        hover:bg-blue-600 focus:bg-blue-700">Buscar</button>
      </form>
    </div>
  </div>
  <div class="bg-white overflow-auto sm:rounded-md shadow-xl mt-5">
    <table class="table-fixed ">
      <thead>
        <tr class="bg-blue-500 text-white">
          <th class="w-20 py-4 ...">ID</th>
          <th class="w-1/6 py-4 ...">Run / Documento</th>
          <th class="w-1/5 py-4 ...">Nombre</th>
          <th class="w-1/3 py-4 ...">Apellido</th>
          <th class="w-28 py-4 ...">Telefono</th>
          <th class="w-1/3 py-4 ...">Email</th>
          <th class="w-28 py-4 ...">Nacionalidad</th>
          <th class="w-28 py-4 ...">Fecha</th>
          <th class="w-28 py-4 ...">Inicio</th>
          <th class="w-28 py-4 ...">Termino</th>
          <th class="w-20 py-4 ...">Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each all}}
        <tr class="even:bg-slate-200">
          <td class="py-3 whitespace-nowrap px-6">{{id}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Run}}{{Numero_Documento}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Nombre}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Apellido}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Telefono}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Email}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Nacionalidad}}</td>
          <td class="p-3 whitespace-nowrap text-center date">{{Fecha}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Hora_Inicio}}</td>
          <td class="p-3 whitespace-nowrap text-center">{{Hora_Termino}}</td>
          <td class="p-3 whitespace-nowrap flex">
            <form action="/horario/delete/{{id}}" method="get" class="mx-2">
              <button class="bg-red-600 text-white px-3 py-1 rounded-sm hover:bg-red-700 btn" type="submit">
                <i class="fas fa-trash"></i></button>
            </form>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>